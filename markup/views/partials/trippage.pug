.controller-div(ng-controller="TripPageCtrl")
  // Page Content
  .container-fluid.text-white.trip-header(style="background:linear-gradient(to bottom, rgba(0,0,0,0.55) ,rgba(0,0,0,0.55) , rgba(0,0,0,0.55)), url('http://travelchannel.sndimg.com/content/dam/images/travel/fullset/2014/12/3/top-10-caribbean-beaches-eagle-beach-aruba.jpg.rend.tccom.1280.960.jpeg') no-repeat center center !important; background-size:cover !important;")
    .row
      .col-md-12
        h1(style='text-transform: uppercase;') {{searchResults.name}}
      .col-md-6.col-md-offset-3.profile-imgs.float-right
        p On the trip:
        img.float-right(src='http://www.fillmurray.com/g/200/200', ng-repeat="person in people")
  .container-fluid
    .row.tri-column.border-bottom
      .col-xs-4.border-right
        h3 Monitoring
        p {{searchResults.city.length}} Cities
      .col-xs-4.border-right
        h3 Target Price:
        p ${{searchResults.maxPrice/(searchResults.users.length)}}
      .col-xs-4
        h3 # of People:
        p {{searchResults.users.length}}
      .col-xs-6
        h3 Begin Trip:
        p {{searchResults.departDate | date: longDate}}
      .col-xs-6
        h3 End Trip:
        p {{searchResults.returnDate | date: longDate }}
  .container
    .row.timeline
      .col-xs-2
        .profile-imgs(style='padding-top: 10px;')
          img.float-right(src='https://s-media-cache-ak0.pinimg.com/236x/02/45/38/0245380e1552c1b4f56f01345005f44a.jpg')
      .col-xs-10
        p.bubble-person
          i Jessica says:
        .bubble
          .bubble-text
            p Alright we will keep it at $300. Can't wait to go on this trip!
    .row.timeline
      .col-xs-2
        .profile-imgs(style='padding-top: 10px;')
          img.float-right(src='https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcTKl0g--tTdX0l9A7MKjDjhy9wjOgTIptVUNqonEpx0juyZF_iB')
      .col-xs-10
        p.bubble-person
          i Emily says:
        .bubble
          .bubble-text
            p I'm a little tight on cash....
    .row.timeline
      .col-xs-2
        .profile-imgs(style='padding-top: 10px;')
          img.float-right(src='https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcQNeyYPROYsl6xqe8EfyAuO5TvLbkc_I76xXS0ghyDeiz44hr0i')
      .col-xs-10
        p.bubble-person
          i Natalie says:
        .bubble
          .bubble-text
            p No! I can't pay that much
    .row.timeline
      .col-xs-2
        .profile-imgs(style='padding-top: 10px;')
          img.float-right(src='https://s-media-cache-ak0.pinimg.com/236x/02/45/38/0245380e1552c1b4f56f01345005f44a.jpg')
      .col-xs-10
        p.bubble-person
          i Jessica says:
        .bubble
          .bubble-text
            p Is everyone ok with moving the price to $350pp?
    .row.timeline(ng-if="hasHistory")
      .col-xs-2
        .profile-imgs(style='padding-top: 10px;')
          img.float-right(src='http://www.fillmurray.com/g/200/200')
      .col-xs-10
        p.bubble-person
          i Computer says:
        .bubble
          .bubble-text
            p The last historical price was {{searchResults.priceHistory[0].price}}
  .container-fluid.fixed-bottom
    .col-xs-6.left-fixed
      a(href='#') EDIT TRIP
    .col-xs-6.right-fixed
      a(href='#') ADD COMMENT
